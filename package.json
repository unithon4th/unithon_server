{
  "name": "boilerplate",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build:live",
    "build:live": "concurrently \"tsc -w\" \"nodemon ./bin/www.js --config nodemon.json\"",
    "test": "jest"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "@types/express": "^4.0.35",
    "@types/mongoose": "^4.7.3",
    "@types/node": "^7.0.4",
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "jade": "~1.11.0",
    "jest": "^18.1.0",
    "mongoose": "^4.8.0",
    "morgan": "~1.7.0",
    "passport": "^0.3.2",
    "serve-favicon": "~2.3.0",
    "ts-jest": "^18.0.2",
    "typescript": "^2.1.5"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "nodemon": "^1.11.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
